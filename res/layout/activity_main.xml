<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="my.home.musictrainning.MainActivity" >

    <ListView
        android:id="@+id/type_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/type_list_layout"
        android:layout_alignParentTop="true" >
    </ListView>

    <ProgressBar
        android:id="@+id/type_list_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:indeterminate="true"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/type_list_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/nextButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:text="Next"
            android:textSize="20sp" />

        <Button
            android:id="@+id/pauseButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:text="Pause"
            android:textSize="20sp" />

        <Button
            android:id="@+id/markButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:text="That&apos;s it!"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>